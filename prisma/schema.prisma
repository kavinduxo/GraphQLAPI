// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["mongodb"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Part {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  description String
  weight      Int
  color       String
  package     Package @relation(fields: [pckId], references: [id]) 
  pckId       String
}

model Package {
  id    String  @id @default(auto()) @map("_id") @db.ObjectId
  name  String 
  parts Part[]
}

